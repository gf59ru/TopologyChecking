<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= link_to user.name, user %>
        <% if signed_in? && (current_user.admin? || current_user?(user)) %>
        <!--% if signed_in? && (current_user.admin?) %-->
            | <%= link_to "delete", user, method: :delete,
                          data: { confirm: "You sure?" } %>
        <% end %>
      </li>
  <% end %>
</ul>

<%= will_paginate %>