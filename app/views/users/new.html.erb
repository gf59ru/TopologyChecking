<% provide(:title, 'Регистрация') %>
<h1>Регистрация в системе проверки топологии</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
        <div class="form-group">
          <%= f.label :name, 'Имя' %>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'Электронная почта' %>
          <%= f.text_field :email, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Пароль' %>
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Подтверждение пароля' %>
          <%= f.password_field :password_confirmation, :class => 'form-control' %>
        </div>
        <%= render 'shared/error_messages', :obj => @user %>

        <%= f.submit 'Создать учётную запись', class: 'btn btn-large btn-primary' %>
    <% end %>
  </div>
</div>
<div style="width: 100%; text-align: center">
  <%= link_to '/auth/google' do %>
      <%= image_tag 'google.png' %>
  <% end %>
</div>
