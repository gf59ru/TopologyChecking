<% provide(:title, 'Sign in') %>
<h1>Вход в систему проверки топологии</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>
        <div class="form-group">
          <%= f.label :email, 'Электронная почта' %>
          <%= f.text_field :email, :class => 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Пароль' %>
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
        <%= f.submit 'Войти', class: 'btn btn-large btn-primary' %>
        <p/>
        <p>Ещё не зарегистрированы? <%= link_to 'Зарегистрируйтесь!', signup_path %></p>
    <% end %>
  </div>
</div>
<br/>
<div style="width: 100%; text-align: center">
  <%= link_to '/auth/google' do %>
      <%= image_tag 'google.png' %>
  <% end %>
</div>
