<h1>
  <!--%= t 'help.operation_types.help' %-->
  <%= t "help.operation_types.#{@operation_type}.name" %>
</h1>
<%= raw @wiki.to_html %>
<!--%= render "home/operation_types/#{@operation_type}" %-->
<!--<hr/>-->
<ul class="list-group">
  <!--% %w(transformation_tool topology_validation).each do |operation| %-->
  <% %w().each do |operation| %>
      <li class="list-group-item">
        <button type="button" class="btn btn-link btn-block" style="text-align: left; outline: none" onclick="this.blur();expand_or_collapse( '<%= operation %>');">
          <%= t "help.operation_types.#{operation}.name" %>
          <span class="caret"/>
        </button>
        <div class="collapse" id="<%= operation %>">
          <%= render "home/operation_types/#{operation}" %>
        </div>
      </li>
  <% end %>
</ul>
