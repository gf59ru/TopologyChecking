<h2><%= t 'person.create_new_account' %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <% unless cookies[:locale].nil? %>
        <%= f.hidden_field :locale, :value => cookies[:locale] %>
    <% end %>

    <div class="form-group">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @validatable %>
          <em>(<%= t 'person.characters_minimum', :count => @minimum_password_length %>)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: 'off', :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: 'off', :class => 'form-control' %>
    </div>

    <%= f.submit (t 'person.sign_up'), :class => 'btn btn-primary' %>
<% end %>

<%= render 'devise/shared/links' %>
